[Unit]
Description=Contegix Sensu Client

[Service]
User=contegix-sensu
Group=contegix-sensu
ExecStart=/opt/contegix/sensu/bin/sensu-client -c /opt/contegix/sensu/etc/sensu/conf.d/client.json -d /opt/contegix/sensu/etc/sensu/conf.d -e /opt/contegix/sensu/etc/sensu/extensions -l /opt/contegix/sensu/var/log/sensu/sensu-client.log
KillMode=process
Restart=on-failure
RestartSec=1min

[Install]
WantedBy=multi-user.target
